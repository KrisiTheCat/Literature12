<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="10dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:layout_marginRight="5dp">

    <View
        android:id="@+id/viewTop"
        android:tag="top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="80" />

    <View
        android:id="@+id/viewBottomTrain"
        android:tag="bottomTrain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="20"
        android:visibility="gone"
        android:background="@drawable/round_edges_medium"
        android:backgroundTint="@color/trainingAccent" />

    <View
        android:id="@+id/viewBottomTest"
        android:tag="bottomTest"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="20"
        android:visibility="gone"
        android:background="@drawable/round_edges_medium"
        android:backgroundTint="@color/testAccent" />
</LinearLayout>